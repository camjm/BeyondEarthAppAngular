doctype html
html
  head
    // Put style links in the header so browsers load the stylesheets first, so the page is styled correctly as it loads
    link(rel="stylesheet", href="https://s3.amazonaws.com/codecademy-content/projects/bootstrap.min.css")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Roboto:500,300,700,400")
    link(rel="stylesheet", href="css/app.css")
    
    // Include the AngularJS library
    script(src="js/shared/angular.min.js")
    
  body(ng-app="BeyondEarthApp")
  
    include header
    section.main(ng-controller="MainController")
      block content
    include footer
    
    // Modules (put script links at the end so they will load after the stylesheets)
    script(src="js/app.js")
    
    // Controllers
    script(src="js/controllers/MainController.js")
